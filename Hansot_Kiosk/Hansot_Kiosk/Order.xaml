<Window x:Class="Hansot_Kiosk.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hansot_Kiosk"
        mc:Ignorable="d"
        WindowStyle="None"
        Left="450"
        Top="0"
        Height="830"
        Width="600"
        Title="Order">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.55*"/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>

        <Grid Background="Yellow">
            <TextBlock Text="한"
                       Background="Orange"
                       Foreground="Brown"
                       Padding="5"
                       TextAlignment="Center"
                       FontSize="20"
                       Height="40"
                       Width="40"
                       Margin="-40,0,0,0"/>
            <TextBlock Text="솥"
                       Background="OrangeRed"
                       Foreground="Brown"
                       Padding="5"
                       TextAlignment="Center"
                       FontSize="20"
                       Height="40"
                       Width="40"
                       Margin="40,0,0,0"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <StackPanel  HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
                <Button Content="인기"
                        x:Name="bestBtn"
                        Foreground="Brown"
                        FontSize="15"
                        Style="{StaticResource RoundButton}"
                        Margin="6,0,0,0"/>
                
                <Button Content="도시락" 
                        x:Name="dosilakBtn" 
                        Foreground="Brown"
                        FontSize="15"
                        Style="{StaticResource RoundButton}" 
                        Height="110"
                        Width="90"
                        Margin="7,0,0,0"/>

                <Button Content="컵밥"
                        x:Name="cubbabBtn"
                        Foreground="Brown"
                        FontSize="15"
                        Style="{StaticResource RoundButton}"
                        Height="110"
                        Width="90"
                        Margin="7,0,0,0"/>

                <Button Content="반찬"
                        x:Name="sidedishBtn"
                        Foreground="Brown"
                        FontSize="15"
                        Style="{StaticResource RoundButton}"
                        Height="110"
                        Width="90"
                        Margin="7,0,0,0"/>

                <Button Content="사이드"
                        x:Name="sideBtn" 
                        Foreground="Brown"
                        FontSize="15"
                        Style="{StaticResource RoundButton}" 
                        Height="110"
                        Width="90"
                        Margin="7,0,0,0"/>

                <Button Content="음료" 
                        x:Name="drinkBtn"
                        Foreground="Brown"
                        FontSize="15"
                        Style="{StaticResource RoundButton}" 
                        Height="110"
                        Width="90"
                        Margin="7,0,0,0"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            
        </Grid>
        <Grid Grid.Row="3" Background="Yellow">
            <Button Content="완료"
                    x:Name="endBtn"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Height="60"
                    Width="100"
                    Margin="0,0,10,10"
                    Click="endBtn_Click"/>
        </Grid>
    </Grid>
</Window>
